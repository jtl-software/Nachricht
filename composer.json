{
    "name": "jtl-software/nachricht",
    "description": "Nachricht is a distributed event queue system",
    "type": "library",
    "license": "MIT",
    "require": {
        "php-amqplib/php-amqplib": "^2.9",
        "jtl/php-generic-collection": "^0.2",
        "psr/container": "^1.0",
        "ext-json": "*"
    },
    "suggest" : {
        "symfony/dependency-injection": "Recommended DI-Container",
        "symfony/config": "Required for Symfony DI-Container and examples",
        "symfony/yaml": "Required for Symfony DI-Container and examples"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpstan/phpstan": "^0.11.6",
        "mockery/mockery": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "JTL\\Nachricht\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JTL\\Nachricht\\": "tests/",
            "JTL\\Nachricht\\Tests\\": "tests/"
        }
    },
    "scripts" : {
        "phpcs": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.neon"
        ]
    }
}
